<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="{{ asset('img/glider.svg') }}">
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
    </head>

    <header class="outer-wrap-header" style="background-image: url({{ asset('img/watercolor1903300.jpg') }})">
        <div class="inner-wrap-header">
        <h1>MVC</h1>
        <nav class="my-navbar">
            <ul class="my-navbar">
                <li><a href="{{ path('home') }}">Home</a></li>
                <li><a href="{{ path('about') }}">About</a></li>
                <li><a href="{{ path('lucky_number') }}">Lucky number</a></li>
            </ul>
        </nav>
        </div>
    </header>

    <body>
        <main>
        {% block body %}{% endblock %}
        </main>
    </body>

    <footer>
        <p>Test footer</p>
    </footer>
    <byline>
        <p>Test byline</p>
    </byline>
</html>